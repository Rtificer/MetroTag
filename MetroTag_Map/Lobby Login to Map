    <div class="login-container">
        <h2>Login to Access the Map</h2>
        <form id="loginForm">
            <input type="text" id="lobby_name" placeholder="Lobby Name" required><br>
            <button type="submit">Login</button>
        </form>
        <p id="errorMessage" style="color: red; display: none;">Invalid credentials. Please try again.</p>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const lobby_name = document.getElementById('lobby_name').value;
            

            // Send the credentials to the server
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ lobby_name, password }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.code === 0) {
                    // Successful login, redirect to the map page
                    window.location.href = '/map';
                } else {
                    // Show error message if credentials are invalid
                    document.getElementById('errorMessage').style.display = 'block';
                }
            })
            .catch(error => console.log('Error:', error));
        });
    </script>

